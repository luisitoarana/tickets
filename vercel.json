{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "backend/main.py", "use": "@vercel/python" }
  ],
  "routes": [
    {
      "src": "/tickets/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/users/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
